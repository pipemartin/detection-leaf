<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-head">
          <h3>Sign In</h3>
          <div>
            <div class="card-body">
              <img src="/img/login.png" alt="logo in" class="card-img-top mx-auto m-2 rounded-circle w-50">  
              <form action="/signin" method="post">
                <div class="form-group p-2">
                  <input
                    type="text"
                    name="username"
                    placeholder="username"
                    class="form-control"
                    autofocus
                  />
                </div>
                <div class="form-group p-2">
                  <input
                    type="password"
                    name="password"
                    placeholder="PassWord"
                    class="form-control"
                  />
                </div>
                <div class="form-group">
                  <button class="btn btn-success btn-block">
                    Sign In
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>